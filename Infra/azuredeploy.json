{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vwanName": {
            "type": "string",
            "metadata": {
                "description": "Azure vWAN Name"
            }
        },
         "vwanHubName": {
            "type": "string",
            "metadata": {
                "description": "Azure vWAN Hub Name"
            }
        },
        "firewallPolicyName": {
            "type": "string",
            "metadata": {
                "description": "Azure Firewall Policy Name"
            }
        },
         "firewallPolicyRuleGroupName": {
            "type": "string",
            "metadata": {
                "description": "Azure Firewall Policy Rule Group Name"
            }
        },
        "vwanFirewallName": {
            "type": "string",
            "metadata": {
                "description": "vWAN Firewall Name"
            }
        },
        "routeTableName": {
            "type": "string",
            "metadata": {
                "description": "AKS Route Table Name"
            }
        },
        "aksVnetName": { "type": "string", "metadata": { "description": "AKS VNET Name"} },
        "agentNodeCount": {
            "type": "int",
            "metadata": {
                "description": "Agent Node Count Value"
            }
        },
        "aksClusterName": {
            "type": "string",
            "metadata": {
                "description": "AKS Cluster Name"
            }
        },
        "clientId" : {
            "type": "securestring",
            "metadata": {
                "description": "Client ID"
            }
        },
        "clientSecret" : {
            "type": "securestring",
            "metadata": {
                "description": "Client Secret"
            }
        },
        "sshKey": {
            "type": "string",
            "metadata": {
                "description": "SSH Key"
            }
        }
    },
    "functions": [],
    "variables": {
        "subnetId": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets',parameters('aksVnetName'),'aksSubnet')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualWans",
            "apiVersion": "2020-05-01",
            "name": "[parameters('vwanName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableVpnEncryption": false,
                "allowBranchToBranchTraffic": true,
                "allowVnetToVnetTraffic": true,
                "office365LocalBreakoutCategory": "None",
                "type": "Standard"
            }
        },
               {
            "type": "Microsoft.Network/virtualHubs",
            "apiVersion": "2020-05-01",
            "name": "[parameters('vwanHubName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans', parameters('vwanName'))]"
            ],
            "properties": {
                "virtualNetworkConnections": [
                    {
                        "name": "[concat('hub-spoke', parameters('aksVnetName'))]",
                        "properties": {
                            "remoteVirtualNetwork": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('aksVnetName'))]"
                            },
                            "allowHubToRemoteVnetTransit": true,
                            "allowRemoteVnetToUseHubVnetGateways": false,
                            "enableInternetSecurity": true
                        }
                    }
                ],
                "addressPrefix": "10.0.0.0/16",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans', parameters('vwanName'))]"
                },
                "azureFirewall": {
                    "id": "[resourceId('Microsoft.Network/azureFirewalls', parameters('vwanFirewallName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/firewallPolicies",
            "apiVersion": "2020-05-01",
            "name": "[parameters('firewallPolicyName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "threatIntelMode": "Deny"
            }
        },
        {
            "type": "Microsoft.Network/firewallPolicies/ruleGroups",
            "apiVersion": "2019-08-01",
            "name": "[parameters('firewallPolicyRuleGroupName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicyName'))]"
            ],
            "properties": {
                "priority": 300,
                    "rules": [
                            {
                                "name": "RC-01",
                                "priority": 100,
                                "ruleType": "FirewallPolicyFilterRule",
                                "action": {
                                    "type": "Allow"
                                },
                                "ruleConditions": [
                                    {
                                        "name": "Allow-msft",
                                        "protocols": [
                                            {
                                                "protocolType": "http",
                                                "port": 80
                                            },
                                            {
                                                "protocolType": "https",
                                                "port": 443
                                            }
                                        ],
                                        "sourceAddresses": [
                                            "*"
                                        ],
                                        "targetFqdns": [
                                            "*.microsoft.com"
                                        ],
                                        "ruleConditionType": "ApplicationRuleCondition"
                                    }
                                ]
                            }
                        ]
                    }
        },
        {
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "2020-05-01",
            "name": "[parameters('vwanFirewallName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', parameters('vwanHubName'))]",
                "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicyName'))]"
            ],
            "properties": {
                "sku": {
                    "name": "AZFW_Hub",
                    "tier": "Standard"
                },
                "hubIPAddresses": {
                                    "publicIPs": {
                                        "count": 1
                                    }
                                },
                "virtualHub": {
                    "id": "[resourceId('Microsoft.Network/virtualHubs', parameters('vwanHubName'))]"
                },
                "firewallPolicy": {
                    "id": "[resourceId('Microsoft.Network/firewallPolicies', parameters('firewallPolicyName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-05-01",
            "name": "[parameters('routeTableName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/azureFirewalls', parameters('vwanFirewallName'))]"
            ],
            "properties": {
                "disableBgpRoutePropagation": false,
                "routes": [
                    {
                        "name": "aks-route-table",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('vwanFirewallName').ipConfigurations[0].properties.privateIPAddress]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('aksVnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "[parameters('aksVnetName')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.1.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "aksSubnet",
                        "dependsOn": [
                            "[resourceId('Microsoft.Network/routeTables', parameters('routeTableName'))]"
                        ],
                        "properties": {
                            "addressPrefix": "10.1.1.0/24",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTableName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs/routeTables",
            "apiVersion": "2020-05-01",
            "name": "Hub-01/VirtualNetworkRouteTable",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', parameters('vwanHubName'))]",
                "[resourceId('Microsoft.Network/azureFirewalls', parameters('vwanFirewallName'))]"
            ],
            "properties": {
                "routes": [
                {
                   "destinationType": "CIDR",
                        "destinations": [
                            "10.1.0.0/24",
                            "0.0.0.0/0"
                                        ],
                         "nextHopType": "IPAddress",
                            "nextHops": [
                                "10.0.64.4"
                                        ]
                                    }
                 ],
                "attachedConnections": [
                    "All_Vnets"
                ]
            }
        },
        {
            "name": "[parameters('aksClusterName')]",
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-06-01",
            "location": "[resourceGroup().location]",
             "sku": {
                "name": "Basic",
                "tier": "Free"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks',parameters('aksVnetName'))]"
            ],
            "properties": {
                "kubernetesVersion": "1.16.13",
                "dnsPrefix": "dnsprefix",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "count": "[parameters('agentNodeCount')]",
                        "vmSize": "Standard_DS2_v2",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks",
                        "vnetSubnetID":"[variables('subnetId')]",
                        "mode" : "System"
                    }
                ],
                "linuxProfile": {
                    "adminUsername": "adminUserName",
                    "ssh": {
                        "publicKeys": [
                            {
                                "keyData": "[parameters('sshKey')]"
                            }
                        ]
                    }
                },
                "servicePrincipalProfile": {
                    "clientId": "[parameters('clientId')]",
                    "secret": "[parameters('clientSecret')]"
                },
                "networkProfile": {
                    "networkPlugin": "azure",
                    "loadBalancerSku": "Standard",
                    "serviceCidr": "10.1.1.0/24",
                    "dnsServiceIP": "10.1.1.10",
                    "dockerBridgeCidr": "172.17.0.1/16",
                    "outboundType": "userDefinedRouting"
                }
            }
        }
    ],
    "outputs": {
         "controlPlaneFQDN": {
            "type": "string",
            "value": "[reference(parameters('aksClusterName')).fqdn]"
        }
    }
}